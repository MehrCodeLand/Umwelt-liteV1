@using Umwelt_liteV.Data.Models.ViewModels
@model CreateArticleVm

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/AdminPages/CreateArticle.css">
    <title>Create Article</title>
</head>
<body>
    <div class="header-div">
        <div class="h-left">
            <p class="title">Umwelt-Admin</p>
        </div>
        <div class="h-right">
            <p class="username">Mehrshad</p>
        </div>
    </div>

    <div class="main-div">
        <form class="article-form" method="post" enctype="multipart/form-data">
            <div class="title-input-div">
                <input asp-for="Title" type="text" class="input-title" placeholder="Title...">
            </div>
            <div class="shortdescription-input-div">
                <input asp-for="ShortDiscription" type="text" class="input-shortdescription" placeholder="Short Description...">
            </div>
            <div class="description-input-div">
                <div class="img-input-div">
                    <input asp-for="ImageFile" type="file" class="input-img" runat="server">
                </div>
                <textarea  asp-for="Discrioption" type="text" class="input-description" rows="7" cols="30" placeholder="Description..."></textarea>
            </div>
            <div class="category-input-div">
                <select asp-for="CategoryID" class="category-select">
                    @foreach(var items in Model.Categories )
                    {
                        <option value="@items.CategoryId">@items.Title</option>
                    }
                </select>
            </div>
            <div class="submit-div">
                <button type="submit" class="btn-submit">Submit</button>
            </div>
        </form>

    </div>
</body>
</html>